@model Cargo.Web.Areas.Admin.Models.CompanyViewModels.CompanyListViewModel
@{
    ViewData["Title"] = "Companies";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Companies Management</h1>
        <div>
            <a href="~/Admin/Company/Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Company
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="d-flex align-items-center">
                        <div class="me-2">
                            <select class="form-select form-select-sm" id="bulkAction" style="width: 150px;">
                                <option value="">Bulk Actions</option>
                                <option value="delete">Delete Selected</option>
                            </select>
                        </div>
                        <button type="button" class="btn btn-sm btn-outline-primary" id="applyBulkAction" disabled>
                            Apply
                        </button>
                    </div>
                </div>
    
            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table id="companiesTable" class="table table-hover table-striped" style="width:100%">
                    <thead class="table-light">
                        <tr>
                            <th width="30">
                                <input type="checkbox" id="selectAll" class="form-check-input">
                            </th>
                            <th>Name</th>
                            <th>Registration Number</th>
                            <th>Address</th>
                            <th width="120">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var company in Model.Companies)
                        {
                            <tr data-id="@company.Id">
                                <td>
                                    <input type="checkbox" class="row-checkbox form-check-input" value="@company.Id">
                                </td>
                                <td>@company.Name</td>
                                <td>@company.RegistrationNumber</td>
                                <td>@company.Address</td>
                                <td>
                                    <div class="btn-group">

                                        <a class="btn btn-sm" asp-action="Details" asp-route-id="@company.Id">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-controller="VehicleAssignment" asp-action="Create"
                                            asp-route-companyId="@company.Id" class="btn btn-sm" title="Vehicle Assignment">
                                            <i class="fa fa-link"></i> </a>
                                        <button type="button" class="btn btn-sm"
                                            onclick="openDriverQuickCreateModal('@company.Id', '@company.Name')"
                                            title="Quick Add Driver">
                                            <i class="fas fa-user-plus"></i> 
                                        </button>
                                        <button type="button" class="btn btn-sm"
                                            onclick="openVehicleQuickCreateModal('@company.Id', '@company.Name')"
                                            title="Quick Add Vehicle">
                                            <i class="fas fa-truck"></i> 
                                        </button>
                                        <a class="btn btn-sm" asp-action="Edit" asp-route-id="@company.Id">
                                            <i class="fas fa-edit"></i> 
                                        </a>
                                        <a class="btn btn-sm text-danger" asp-action="Delete" asp-route-id="@company.Id">
                                            <i class="fas fa-trash"></i> 
                                        </a>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th >
                            </th>
                            <th>Name</th>
                            <th>Registration Number</th>
                            <th>Address</th>
                            <th width="120">Actions</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Include the modal partials -->
@await Html.PartialAsync("~/Areas/Admin/Views/Driver/_QuickCreateModal.cshtml",
new Cargo.Web.Areas.Admin.Models.DriverViewModels.DriverCreateViewModel())
@await Html.PartialAsync("~/Areas/Admin/Views/Vehicle/_QuickCreateModal.cshtml",
new Cargo.Web.Areas.Admin.Models.VehicleViewModels.VehicleCreateViewModel())

@section Styles {
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="~/lib/dataTables/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="~/lib/dataTables/css/buttons.bootstrap5.min.css">
    <link rel="stylesheet" href="~/lib/dataTables/css/responsive.bootstrap5.min.css">
}

@section Scripts {

    <script src="~/js/quick-create-driver.js" asp-append-version="true"></script>
    <script src="~/js/quick-create-vehicle.js" asp-append-version="true"></script>

    <!-- DataTables JS -->
    <script src="~/lib/dataTables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/dataTables/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/lib/dataTables/js/dataTables.buttons.min.js"></script>
    <script src="~/lib/dataTables/js/buttons.bootstrap5.min.js"></script>
    <script src="~/lib/dataTables/js/jszip.min.js"></script>
    <script src="~/lib/dataTables/js/pdfmake.min.js"></script>
    <script src="~/lib/dataTables/js/vfs_fonts.js"></script>
    <script src="~/lib/dataTables/js/buttons.html5.min.js"></script>
    <script src="~/lib/dataTables/js/buttons.print.min.js"></script>
    <script src="~/lib/dataTables/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/dataTables/js/responsive.bootstrap5.min.js"></script>

    <script>

        // Simple wrapper function to call the external function
        function openDriverQuickCreateModal(companyId, companyName) {
            if (typeof window.openDriverQuickCreateModal === 'function') {
                window.openDriverQuickCreateModal(companyId, companyName);
            } else {
                console.error('Quick create driver function not found');
            }
        }

        // Simple wrapper function to call the external function
        function openVehicleQuickCreateModal(companyId, companyName) {
            if (typeof window.openVehicleQuickCreateModal === 'function') {
                window.openVehicleQuickCreateModal(companyId, companyName);
            } else {
                console.error('Quick create vehicle function not found');
            }
        }
        $(document).ready(function () {
            var table = $('#companiesTable').DataTable({
                responsive: true,
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'excel',
                        text: '<i class="fas fa-file-excel"></i> Excel',
                        className: 'btn btn-primary btn-sm',
                        exportOptions: {
                            columns: [1, 2, 3]
                        }
                    },
                    {
                        extend: 'pdf',
                        text: '<i class="fas fa-file-pdf"></i> PDF',
                        className: 'btn btn-primary btn-sm',
                        exportOptions: {
                            columns: [1, 2, 3]
                        }
                    },
                    {
                        extend: 'csv',
                        text: '<i class="fas fa-file-csv"></i> CSV',
                        className: 'btn btn-primary btn-sm',
                        exportOptions: {
                            columns: [1, 2, 3]
                        }
                    }
                ],
                columnDefs: [
                    { orderable: false, targets: [0, 4] },
                    { searchable: false, targets: [0, 4] }
                ],
                order: [[1, 'asc']],
                pageLength: 25,
                "sScrollY": ($(window).height() - 200),
                lengthMenu: [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]]
            });

            // Global search
            $('#globalSearch').on('keyup', function () {
                table.search(this.value).draw();
            });

            // Select all checkbox
            $('#selectAll').on('click', function () {
                $('.row-checkbox').prop('checked', this.checked);
                updateBulkActionButton();
            });

            // Individual checkbox change
            $(document).on('change', '.row-checkbox', function () {
                updateBulkActionButton();
                updateSelectAllCheckbox();
            });

            // Update bulk action button state
            function updateBulkActionButton() {
                var checkedCount = $('.row-checkbox:checked').length;
                $('#applyBulkAction').prop('disabled', checkedCount === 0);
            }

            function updateSelectAllCheckbox() {
                var totalCheckboxes = $('.row-checkbox').length;
                var checkedCheckboxes = $('.row-checkbox:checked').length;
                $('#selectAll').prop('checked', totalCheckboxes === checkedCheckboxes);
            }

            // Bulk action handler
            $('#applyBulkAction').on('click', function () {
                var selectedIds = [];
                $('.row-checkbox:checked').each(function () {
                    selectedIds.push($(this).val());
                });

                var action = $('#bulkAction').val();

                if (selectedIds.length > 0 && action) {
                    console.log('Bulk action:', action, 'for IDs:', selectedIds);
                    alert(`Bulk action "${action}" would be applied to ${selectedIds.length} companies`);
                }
            });
        });
    </script>
}
