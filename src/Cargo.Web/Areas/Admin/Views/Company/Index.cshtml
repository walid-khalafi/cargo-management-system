@model Cargo.Web.Areas.Admin.Models.CompanyViewModels.CompanyListViewModel
@{
    ViewData["Title"] = "Companies";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Companies Management</h1>
        <a href="~/Admin/Company/Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Company
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <form method="get" class="d-flex">
                        <input type="text" name="search" value="@Model.SearchTerm" class="form-control me-2"
                            placeholder="Search companies..." />
                        <button type="submit" class="btn btn-outline-secondary">
                            <i class="fas fa-search"></i> Search
                        </button>
                        @if (!string.IsNullOrEmpty(Model.SearchTerm))
                        {
                            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                                <i class="fas fa-times"></i> Clear
                            </a>
                        }
                    </form>
                </div>
                <div class="col-md-6 text-end">
                    <small class="text-muted">
                        Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) -
                        @System.Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount)
                        of @Model.TotalCount companies
                    </small>
                </div>
            </div>
        </div>

        <div class="card-body">
            @if (Model.Companies.Any())
            {

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Registration Number</th>
                            <th>Address</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var company in Model.Companies)
                        {
                            <tr>
                                <td>@company.Name</td>
                                <td>@company.RegistrationNumber</td>
                                <td>@company.Address</td>
                                <td>
                                    <div class="btn-group dropstart">
                                        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown"
                                            aria-haspopup="true" aria-expanded="false">
                                            <i class="fa fa-ellipsis-v"></i> Actions
                                        </button>
                                        <div class="dropdown-menu">
                                            <a asp-action="Details" asp-route-id="@company.Id" class="dropdown-item"
                                                title="Details">
                                                <i class="fa fa-eye"></i> Details
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@company.Id" class="dropdown-item" title="Edit">
                                                <i class="fa fa-edit"></i> Edit
                                            </a>
                                            <a asp-controller="VehicleAssignment" asp-action="Create"
                                                asp-route-companyId="@company.Id" class="dropdown-item"
                                                title="Vehicle Assignment">
                                                <i class="fa fa-link"></i> Vehicle Assignment
                                            </a>
                                            <button type="button" class="dropdown-item"
                                                onclick="openDriverQuickCreateModal('@company.Id', '@company.Name')"
                                                title="Quick Add Driver">
                                                <i class="fas fa-user-plus"></i> Quick Add Driver
                                            </button>
                                            <button type="button" class="dropdown-item"
                                                onclick="openVehicleQuickCreateModal('@company.Id', '@company.Name')"
                                                title="Quick Add Vehicle">
                                                <i class="fas fa-truck"></i> Quick Add Vehicle
                                            </button>
                                            <div class="dropdown-divider"></div>
                                            <a asp-action="Delete" asp-route-id="@company.Id" class="dropdown-item text-danger"
                                                title="Delete">
                                                <i class="fa fa-trash"></i> Delete
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>


                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Company pagination">
                        <ul class="pagination justify-content-center">
                            @if (Model.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)"
                                        asp-route-search="@Model.SearchTerm">Previous</a>
                                </li>
                            }

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@i"
                                        asp-route-search="@Model.SearchTerm">@i</a>
                                </li>
                            }

                            @if (Model.CurrentPage < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)"
                                        asp-route-search="@Model.SearchTerm">Next</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-building fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No companies found</h5>
                    <p class="text-muted">There are no companies to display.</p>
                    <a asp-action="Create" asp-area="Admin" asp-controller="Company" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create First Company
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Include the modal partials -->
@await Html.PartialAsync("~/Areas/Admin/Views/Driver/_QuickCreateModal.cshtml",
new Cargo.Web.Areas.Admin.Models.DriverViewModels.DriverCreateViewModel())
@await Html.PartialAsync("~/Areas/Admin/Views/Vehicle/_QuickCreateModal.cshtml",
new Cargo.Web.Areas.Admin.Models.VehicleViewModels.VehicleCreateViewModel())

@section Scripts {
    <script src="~/js/quick-create-driver.js" asp-append-version="true"></script>
    <script src="~/js/quick-create-vehicle.js" asp-append-version="true"></script>
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function () {
            $('.alert').alert('close');
        }, 5000);

        // Simple wrapper function to call the external function
        function openDriverQuickCreateModal(companyId, companyName) {
            if (typeof window.openDriverQuickCreateModal === 'function') {
                window.openDriverQuickCreateModal(companyId, companyName);
            } else {
                console.error('Quick create driver function not found');
            }
        }

        // Simple wrapper function to call the external function
        function openVehicleQuickCreateModal(companyId, companyName) {
            if (typeof window.openVehicleQuickCreateModal === 'function') {
                window.openVehicleQuickCreateModal(companyId, companyName);
            } else {
                console.error('Quick create vehicle function not found');
            }
        }
    </script>
}
