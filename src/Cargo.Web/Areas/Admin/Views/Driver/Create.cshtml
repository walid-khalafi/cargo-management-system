@model Cargo.Web.Areas.Admin.Models.DriverViewModels.DriverCreateViewModel
@{
    ViewData["Title"] = "Create Driver";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Create New Driver</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Driver Information</h5>
                    </div>
                    <div class="card-body">
                        
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label">First Name <span class="text-danger">*</span></label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter driver's first name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                            <small class="form-text text-muted">Driver's legal first name as it appears on official documents</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label">Last Name <span class="text-danger">*</span></label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter driver's last name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                            <small class="form-text text-muted">Driver's legal last name as it appears on official documents</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email Address <span class="text-danger">*</span></label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="Enter email address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <small class="form-text text-muted">Valid email address for communication and notifications</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Phone Number <span class="text-danger">*</span></label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            <small class="form-text text-muted">Primary contact number where driver can be reached</small>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h6 class="mb-0">Address Details</h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <label asp-for="Address.Street" class="form-label">Street Address <span class="text-danger">*</span></label>
                                        <input asp-for="Address.Street" class="form-control" placeholder="Enter street address" />
                                        <span asp-validation-for="Address.Street" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Address.City" class="form-label">City <span class="text-danger">*</span></label>
                                        <input asp-for="Address.City" class="form-control" placeholder="Enter city" />
                                        <span asp-validation-for="Address.City" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Address.State" class="form-label">Province <span class="text-danger">*</span></label>
                                        <input asp-for="Address.State" class="form-control" placeholder="Enter province" />
                                        <span asp-validation-for="Address.State" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Address.ZipCode" class="form-label">Postal Code <span class="text-danger">*</span></label>
                                        <input asp-for="Address.ZipCode" class="form-control" placeholder="Enter postal code" />
                                        <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Address.Country" class="form-label">Country <span class="text-danger">*</span></label>
                                        <input asp-for="Address.Country" class="form-control" value="Canada" placeholder="Enter country" />
                                        <span asp-validation-for="Address.Country" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h6 class="mb-0">Driver's License Information</h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="LicenseNumber" class="form-label">License Number <span class="text-danger">*</span></label>
                                        <input asp-for="LicenseNumber" class="form-control" placeholder="Enter license number" />
                                        <span asp-validation-for="LicenseNumber" class="text-danger"></span>
                                        <small class="form-text text-muted">Complete driver's license identification number</small>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label asp-for="LicenseType" class="form-label">License Type <span class="text-danger">*</span></label>
                                        <input asp-for="LicenseType" class="form-control" placeholder="e.g., Class A, CDL" />
                                        <span asp-validation-for="LicenseType" class="text-danger"></span>
                                        <small class="form-text text-muted">Category/class of driver's license</small>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label asp-for="LicenseExpiryDate" class="form-label">License Expiry Date <span class="text-danger">*</span></label>
                                        <input asp-for="LicenseExpiryDate" class="form-control" type="date" />
                                        <span asp-validation-for="LicenseExpiryDate" class="text-danger"></span>
                                        <small class="form-text text-muted">License expiration date must be in the future</small>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label asp-for="DateOfBirth" class="form-label">Date of Birth <span class="text-danger">*</span></label>
                                        <input asp-for="DateOfBirth" class="form-control" type="date" />
                                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                        <small class="form-text text-muted">Driver must be 18 years or older</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="YearsOfExperience" class="form-label">Years of Experience <span class="text-danger">*</span></label>
                                <input asp-for="YearsOfExperience" class="form-control" type="number" min="0" placeholder="Enter years of experience" />
                                <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
                                <small class="form-text text-muted">Total years of professional driving experience</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="CompanyId" class="form-label">Company <span class="text-danger">*</span></label>
                                <select asp-for="CompanyId" class="form-control">
                                    <option value="">Select Company</option>
                                    @foreach (var company in ViewBag.Companies ?? new List<SelectListItem>())
                                    {
                                        <option value="@company.Value">@company.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="CompanyId" class="text-danger"></span>
                                <small class="form-text text-muted">Associated company/organization</small>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Driver
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Help & Guidelines</h5>
                    </div>
                    <div class="card-body">
                        <h6>Required Fields</h6>
                        <ul class="list-unstyled">
                            <li><i class="fas fa-check text-success"></i> <strong>Personal Info:</strong> Full name, email, phone</li>
                            <li><i class="fas fa-check text-success"></i> <strong>Address:</strong> Complete street, city, province, postal code</li>
                            <li><i class="fas fa-check text-success"></i> <strong>License Details:</strong> Number, type, expiry date</li>
                            <li><i class="fas fa-check text-success"></i> <strong>Personal Details:</strong> Date of birth, experience</li>
                            <li><i class="fas fa-check text-success"></i> <strong>Association:</strong> Company selection</li>
                        </ul>
                        
                        <h6>Address Guidelines</h6>
                        <ul class="list-unstyled">
                            <li><small><strong>Street:</strong> Full street address including unit/apt</small></li>
                            <li><small><strong>City:</strong> City or town name</small></li>
                            <li><small><strong>Province:</strong> State or province name</small></li>
                            <li><small><strong>Postal Code:</strong> ZIP or postal code</small></li>
                            <li><small><strong>Country:</strong> Country name (defaults to Canada)</small></li>
                        </ul>
                        
                        <h6>License Guidelines</h6>
                        <ul class="list-unstyled">
                            <li><small><strong>License Number:</strong> Complete ID from driver's license</small></li>
                            <li><small><strong>License Type:</strong> Class A, B, CDL, etc.</small></li>
                            <li><small><strong>Expiry Date:</strong> Must be future date</small></li>
                        </ul>
                        
                        <h6>Validation Rules</h6>
                        <ul class="list-unstyled">
                            <li><small><strong>Email:</strong> Valid format required</small></li>
                            <li><small><strong>Phone:</strong> Standard US format</small></li>
                            <li><small><strong>Age:</strong> Must be 18+ years</small></li>
                            <li><small><strong>Experience:</strong> Whole number of years</small></li>
                        </ul>
                        
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Note:</strong> All fields marked with <span class="text-danger">*</span> are required for registration
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Add any driver-specific validation or help functionality here
        document.addEventListener('DOMContentLoaded', function() {
            // License expiry validation
            const licenseExpiry = document.querySelector('#LicenseExpiryDate');
            if (licenseExpiry) {
                licenseExpiry.addEventListener('change', function() {
                    const expiryDate = new Date(this.value);
                    const today = new Date();
                    if (expiryDate <= today) {
                        this.setCustomValidity('License expiry date must be in the future');
                    } else {
                        this.setCustomValidity('');
                    }
                });
            }

            // Date of birth validation (18+ years)
            const dob = document.querySelector('#DateOfBirth');
            if (dob) {
                dob.addEventListener('change', function() {
                    const birthDate = new Date(this.value);
                    const today = new Date();
                    const age = Math.floor((today - birthDate) / (365.25 * 24 * 60 * 60 * 1000));
                    if (age < 18) {
                        this.setCustomValidity('Driver must be 18 years or older');
                    } else {
                        this.setCustomValidity('');
                    }
                });
            }
        });
    </script>
}
