@model Cargo.Web.Areas.Admin.Models.DriverViewModels.DriverViewModel

@{
    ViewData["Title"] = "Driver Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="fas fa-user-tie"></i> Driver Details
        </h1>
      
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle"></i> Driver Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-user fa-2x text-primary"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <label class="form-label fw-bold text-muted mb-1">Full Name</label>
                                    <p class="h5 mb-0">@Model.FullName</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-envelope fa-2x text-primary"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <label class="form-label fw-bold text-muted mb-1">Email</label>
                                    <p class="h5 mb-0">@Model.Email</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-phone text-primary me-2"></i>Phone Number
                            </label>
                            <p class="form-control-plaintext">@Model.PhoneNumber</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-id-card text-primary me-2"></i>License Number
                            </label>
                            <p class="form-control-plaintext">@Model.LicenseNumber</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-file-alt text-primary me-2"></i>License Type
                            </label>
                            <p class="form-control-plaintext">@Model.LicenseType</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-calendar-alt text-primary me-2"></i>License Expiry Date
                            </label>
                            <p class="form-control-plaintext">@Model.LicenseExpiryDate.ToString("MMMM dd, yyyy")</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-birthday-cake text-primary me-2"></i>Date of Birth
                            </label>
                            <p class="form-control-plaintext">@Model.DateOfBirth.ToString("MMMM dd, yyyy")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-briefcase text-primary me-2"></i>Years of Experience
                            </label>
                            <p class="form-control-plaintext">@Model.YearsOfExperience years</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-map-marker-alt text-primary me-2"></i>Address
                            </label>
                            <p class="form-control-plaintext">@Model.Address</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-check-circle text-primary me-2"></i>Status
                            </label>
                            <p class="form-control-plaintext">
                                <span class="badge badge-@(Model.Status == Cargo.Domain.Enums.DriverStatus.Active ? "bg-success" : "bg-secondary")">
                                    @Model.Status
                                </span>
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-building text-primary me-2"></i>Company
                            </label>
                            <p class="form-control-plaintext">@Model.CompanyId</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-cogs"></i> Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-3">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">
                            <i class="fas fa-edit"></i> Edit Driver
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg" onclick="return confirm('Are you sure you want to delete this driver? This action cannot be undone.');">
                            <i class="fas fa-trash"></i> Delete Driver
                        </a>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-list"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mt-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar"></i> Summary
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <strong>Driver ID:</strong> @Model.Id.ToString().Substring(0, 8)...
                        </li>
                        <li class="mb-2">
                            <strong>License Expires:</strong> 
                            <span class="text-@(Model.LicenseExpiryDate < DateTime.Now ? "danger" : "success")">
                                @Model.LicenseExpiryDate.ToString("MMM dd, yyyy")
                            </span>
                        </li>
                        <li class="mb-2">
                            <strong>Experience:</strong> @Model.YearsOfExperience years
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 0.5rem;
        }
        .card-header {
            border-radius: 0.5rem 0.5rem 0 0 !important;
        }
        .badge {
            font-size: 0.9em;
            padding: 0.5em 0.75em;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add any interactive features here
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}
