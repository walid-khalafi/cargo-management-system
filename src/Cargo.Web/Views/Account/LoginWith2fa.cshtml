@model LoginWith2faViewModel
@{
    ViewData["Title"] = "Two-Factor Password";
}

<section style="padding-top: 100px; padding-bottom:100px;">
    <!-- add padding top -->
    <div class="container">
        <div class="row justify-content-center">
            <h2>@ViewData["Title"]</h2>
            <hr />
            <p>Your account is protected with a two-factor password. Please enter your second password.</p>

            <form method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                <input asp-for="RememberMe" type="hidden" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TwoFactorCode"></label>
                    <input asp-for="TwoFactorCode" class="form-control" autocomplete="off" />
                    <span asp-validation-for="TwoFactorCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="RememberMachine">
                            <input asp-for="RememberMachine" />
                            @Html.DisplayNameFor(m => m.RememberMachine)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="wePrimaryButton">Log in to System</button>
                </div>
            </form>

            <p>
                Don't have access to the device that generates the second password? You can
                <a asp-action="LoginWithRecoveryCode" asp-route-returnUrl="@ViewData["ReturnUrl"]">log in to your account with a recovery code</a>.
            </p>

        </div>
    </div>
</section>