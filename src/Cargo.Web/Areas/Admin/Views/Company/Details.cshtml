@model Cargo.Application.DTOs.Company.CompanyDto

@{
    ViewData["Title"] = "Company Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="fas fa-building"></i> Company Details
        </h1>
       
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle"></i> Company Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-building fa-2x text-primary"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <label class="form-label fw-bold text-muted mb-1">Company Name</label>
                                    <p class="h5 mb-0">@Model.Name</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-hashtag fa-2x text-primary"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <label class="form-label fw-bold text-muted mb-1">Registration Number</label>
                                    <p class="h5 mb-0">@Model.RegistrationNumber</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-map-marker-alt text-primary me-2"></i>Address
                            </label>
                            <p class="form-control-plaintext">@Model.Address</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-file-invoice-dollar text-primary me-2"></i>Tax Profile
                            </label>
                            <p class="form-control-plaintext">@Model.TaxProfile</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-users text-primary me-2"></i>Total Drivers
                            </label>
                            <p class="form-control-plaintext">
                                <span class="badge bg-info">@Model.DriverIds.Count</span>
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-truck text-primary me-2"></i>Total Vehicles
                            </label>
                            <p class="form-control-plaintext">
                                <span class="badge bg-success">@Model.VehicleIds.Count</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-cogs"></i> Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-3">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">
                            <i class="fas fa-edit"></i> Edit Company
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg" onclick="return confirm('Are you sure you want to delete this company? This action cannot be undone.');">
                            <i class="fas fa-trash"></i> Delete Company
                        </a>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-list"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mt-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-pie"></i> Summary
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <strong>Company ID:</strong> @Model.Id.ToString().Substring(0, 8)...
                        </li>
                        <li class="mb-2">
                            <strong>Total Drivers:</strong> 
                            <span class="badge bg-info">@Model.DriverIds.Count</span>
                        </li>
                        <li class="mb-2">
                            <strong>Total Vehicles:</strong> 
                            <span class="badge bg-success">@Model.VehicleIds.Count</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 0.5rem;
        }
        .card-header {
            border-radius: 0.5rem 0.5rem 0 0 !important;
        }
        .badge {
            font-size: 0.9em;
            padding: 0.5em 0.75em;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}
