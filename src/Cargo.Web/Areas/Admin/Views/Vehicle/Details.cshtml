@model Cargo.Application.DTOs.Vehicles.VehicleDto

@{
    ViewData["Title"] = "Vehicle Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="fas fa-truck"></i> Vehicle Details
        </h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this vehicle?');">
                <i class="fas fa-trash"></i> Delete
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Vehicle Information Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-truck"></i> Vehicle Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">License Plate</label>
                                <p class="h5 mb-0">@Model.RegistrationNumber</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Make & Model</label>
                                <p class="h5 mb-0">@Model.Make @Model.Model</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Year</label>
                                <p class="mb-0">@Model.Year</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Color</label>
                                <p class="mb-0">@Model.Color</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">VIN</label>
                                <p class="mb-0">@Model.VIN</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Fuel Type</label>
                                <p class="mb-0">@Model.FuelType</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Capacity</label>
                                <p class="mb-0">@Model.Capacity</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Current Location</label>
                                <p class="mb-0">@Model.CurrentLocation</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Status Information Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle"></i> Status Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Status</label>
                                <p class="mb-0">
                                    <span class="badge @(Model.Status.ToString() == "Active" ? "bg-success" : Model.Status.ToString() == "Maintenance" ? "bg-warning" : "bg-secondary")">
                                        @Model.Status
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Availability</label>
                                <p class="mb-0">
                                    <span class="badge @(Model.IsAvailable ? "bg-success" : "bg-danger")">
                                        @(Model.IsAvailable ? "Available" : "Not Available")
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Technical Specifications Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-cogs"></i> Technical Specifications
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Vehicle ID</label>
                                <p class="mb-0">@Model.Id</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Registration Date</label>
                                <p class="mb-0">@DateTime.Now.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Quick Actions Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-cogs"></i> Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit Vehicle
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this vehicle? This action cannot be undone.');">
                            <i class="fas fa-trash"></i> Delete Vehicle
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-list"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>

            <!-- Summary Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar"></i> Summary
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <strong>Vehicle ID:</strong> @Model.Id
                        </li>
                        <li class="mb-2">
                            <strong>Make & Model:</strong> @Model.Make @Model.Model
                        </li>
                        <li class="mb-2">
                            <strong>Year:</strong> @Model.Year
                        </li>
                        <li class="mb-2">
                            <strong>Status:</strong>
                            <span class="badge @(Model.Status.ToString() == "Active" ? "bg-success" : Model.Status.ToString() == "Maintenance" ? "bg-warning" : "bg-secondary")">
                                @Model.Status
                            </span>
                        </li>
                        <li class="mb-2">
                            <strong>Availability:</strong>
                            <span class="badge @(Model.IsAvailable ? "bg-success" : "bg-danger")">
                                @(Model.IsAvailable ? "Available" : "Not Available")
                            </span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Vehicle Stats Card -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar"></i> Vehicle Stats
                    </h5>
                </div>
                <div class="card-body text-center">
                    <div class="row">
                        <div class="col-6">
                            <div class="text-center">
                                <h4 class="text-primary">@Model.Year</h4>
                                <small class="text-muted">Model Year</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="text-center">
                                <h4 class="text-success">@Model.Capacity</h4>
                                <small class="text-muted">Capacity</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 0.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
        }
        .card-header {
            border-radius: 0.5rem 0.5rem 0 0 !important;
        }
        .badge {
            font-size: 0.9em;
            padding: 0.5em 0.75em;
        }
        .form-label {
            font-size: 0.875rem;
            margin-bottom: 0.25rem;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add any interactive features here
            $('[data-toggle="tooltip"]').tooltip();
            
            // Animate cards on load
            $('.card').hide().fadeIn(500);
        });
    </script>
}
