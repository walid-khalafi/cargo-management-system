@model Cargo.Web.Areas.Admin.Models.VehicleViewModels.VehicleListViewModel
@{
    ViewData["Title"] = "Vehicles";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Vehicles Management</h1>
        <a href="~/Admin/Vehicle/Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Vehicle
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <form method="get" class="d-flex">
                        <input type="text" name="search" value="@Model.SearchTerm" class="form-control me-2"
                            placeholder="Search vehicles..." />
                        <button type="submit" class="btn btn-outline-secondary">
                            <i class="fas fa-search"></i> Search
                        </button>
                        @if (!string.IsNullOrEmpty(Model.SearchTerm))
                        {
                            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                                <i class="fas fa-times"></i> Clear
                            </a>
                        }
                    </form>
                </div>
                <div class="col-md-6 text-end">
                    <small class="text-muted">
                        Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) -
                        @System.Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount)
                        of @Model.TotalCount vehicles
                    </small>
                </div>
            </div>
        </div>

        <div class="card-body">
            @if (Model.Vehicles.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>License Plate</th>
                                <th>Make</th>
                                <th>Model</th>
                                <th>Year</th>
                                <th>VIN</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var vehicle in Model.Vehicles)
                            {
                                <tr>
                                    <td>@vehicle.RegistrationNumber</td>
                                    <td>@vehicle.Make</td>
                                    <td>@vehicle.Model</td>
                                    <td>@vehicle.Year</td>
                                    <td>@vehicle.VIN</td>
                                    <td>
                                        <span
                                            class="badge bg-@(vehicle.Status.ToString() == "Active" ? "success" : vehicle.Status.ToString() == "Maintenance" ? "warning" : "secondary")">
                                            @vehicle.Status
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group dropstart">
                                            <button type="button" class="btn btn-primary dropdown-toggle"
                                                data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="fa fa-ellipsis-v"></i> Actions
                                            </button>
                                            <div class="dropdown-menu">
                                                <a asp-action="Details" asp-route-id="@vehicle.Id" class="dropdown-item"
                                                    title="Details">
                                                    <i class="fa fa-eye"></i> Details
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@vehicle.Id" class="dropdown-item"
                                                    title="Edit">
                                                    <i class="fa fa-edit"></i> Edit
                                                </a>


                                                <div class="dropdown-divider"></div>
                                                <a asp-action="Delete" asp-route-id="@vehicle.Id"
                                                    class="dropdown-item text-danger" title="Delete">
                                                    <i class="fa fa-trash"></i> Delete
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Vehicle pagination">
                        <ul class="pagination justify-content-center">
                            @if (Model.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)"
                                        asp-route-search="@Model.SearchTerm">Previous</a>
                                </li>
                            }

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@i"
                                        asp-route-search="@Model.SearchTerm">@i</a>
                                </li>
                            }

                            @if (Model.CurrentPage < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)"
                                        asp-route-search="@Model.SearchTerm">Next</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-truck fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No vehicles found</h5>
                    <p class="text-muted">There are no vehicles to display.</p>
                    <a asp-action="Create" asp-area="Admin" asp-controller="Vehicle" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create First Vehicle
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function () {
            $('.alert').alert('close');
        }, 5000);
    </script>
}
